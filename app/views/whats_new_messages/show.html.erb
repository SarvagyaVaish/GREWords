<%- model_class = @whats_new_message.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @whats_new_message.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @whats_new_message.text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_specific) %>:</strong></dt>
  <dd><%= @whats_new_message.user_specific %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expiration_date) %>:</strong></dt>
  <dd><%= @whats_new_message.expiration_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              whats_new_messages_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_whats_new_message_path(@whats_new_message), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              whats_new_message_path(@whats_new_message),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
