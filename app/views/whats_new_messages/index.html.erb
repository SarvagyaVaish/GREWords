<%- model_class = WhatsNewMessage.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:user_specific) %></th>
      <th><%= model_class.human_attribute_name(:expiration_date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @whats_new_messages.each do |whats_new_message| %>
      <tr>
        <td><%= link_to whats_new_message.id, whats_new_message_path(whats_new_message) %></td>
        <td><%= whats_new_message.title %></td>
        <td><%= whats_new_message.text %></td>
        <td><%= whats_new_message.user_specific %></td>
        <td><%= whats_new_message.expiration_date %></td>
        <td><%=l whats_new_message.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_whats_new_message_path(whats_new_message), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      whats_new_message_path(whats_new_message),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_whats_new_message_path,
            :class => 'btn btn-primary' %>
