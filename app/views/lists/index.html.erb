<div class="page-header">
  <h1>Word lists</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>List Name</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, contents_list_path(list) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_list_path,
            :class => 'btn btn-primary' %>
