<div class="row-fluid">
 <div class="span12 centered">
   <h1>GRE Words</h1>
 </div>
</div>

<div class="row-fluid top-margin-20">

  <div class="span12 centered">
    <% if current_user %>
      <% current_user.word_lists.each do |word_list| %>
        <%= link_to word_list.name, contents_word_list_path(word_list), :class => 'btn' %>
      <% end %>
    <% else %>
      <%= link_to 'Login using FB', '/auth/facebook', :class => 'btn'%>
      <br /><br />
      <%= link_to 'Learn Words', fetch_learn_words_url, :class => 'btn' %>
    <% end %>
  </div>

</div>

