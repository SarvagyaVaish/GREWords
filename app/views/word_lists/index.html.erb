<div class="page-header">
  <h1>Word lists</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>List Name</th>
    </tr>
  </thead>
  <tbody>
    <% @word_lists.each do |word_list| %>
      <tr>
        <td><%= link_to word_list.name, contents_word_list_path(word_list) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_word_list_path,
            :class => 'btn btn-primary' %>
